{
 "version": "2.1.4",
 "compilerOptions": {
  "target": "es2016",
  "module": "commonjs",
  "moduleResolution": "node",
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "outDir": "./build",
  "rootDir": "src",
  "jsx": "react",
  "sourceMap": true,
  "strictNullChecks": true,
  "typeRoots" : ["./types", "./node_modules/@types/"]
  },
  "include": [
    "types",
    "src/**/*"
  ]
}
