{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "isWatching": true,
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        { 
            "taskName": "TypeScript",
            "args": ["run", "tsc:watch"]
        },
        { 
            "taskName": "Sass",
            "args": ["run", "style:watch"]
        },
        { 
            "taskName": "Webpack",
            "args": ["run", "webpack"]
        }
    ]
}